<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>daryl</groupId>
    <artifactId>system</artifactId>
    <version>1.1.2</version>
  </parent>
  <groupId>daryl.system</groupId>
  <artifactId>backtest-robot</artifactId>
  <version>1.1.2</version>
  <name>daryl-system-backtest-robot</name>
  <description>Robot Arima A</description>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  <properties>
    <daryl.system.arima-base>1.1.1</daryl.system.arima-base>
    <daryl.system.ta4j>1.1.1</daryl.system.ta4j>
  </properties>
  <dependencies>
    <dependency>
      <groupId>daryl.system</groupId>
      <artifactId>ta4j</artifactId>
      <version>${daryl.system.ta4j}</version>
    </dependency>
    <dependency>
      <groupId>daryl.system.robots</groupId>
      <artifactId>arima-base</artifactId>
      <version>${daryl.system.arima-base}</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-activemq</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>activemq-broker</artifactId>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/profiles/${profile.name}</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <addResources>true</addResources>
          <excludes>
            <exclude>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
            </exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <profile.name>dev</profile.name>
      </properties>
    </profile>
    <profile>
      <id>tragsa</id>
      <properties>
        <profile.name>tragsa</profile.name>
      </properties>
    </profile>
    <profile>
      <id>prod</id>
      <properties>
        <profile.name>prod</profile.name>
      </properties>
    </profile>
    <profile>
      <id>fuji</id>
      <properties>
        <profile.name>fuji</profile.name>
      </properties>
    </profile>
  </profiles>
</project>
